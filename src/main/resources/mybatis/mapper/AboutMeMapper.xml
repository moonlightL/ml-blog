<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.extlight.mapper.AboutMeMapper">

    <select id="getByStatus" parameterType="java.lang.Integer" resultType="com.extlight.model.AboutMe">
        SELECT
            id,
            content,
            status
        FROM
            t_about_me
        <where>
            <if test="status != null">
                status = #{status}
            </if>
        </where>
        LIMIT 1
    </select>
</mapper>